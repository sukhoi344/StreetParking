<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MapsActivity" />

    <!--  REQUEST and ADD buttons layout -->
    <LinearLayout
        android:id="@+id/request_add_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#ffffff"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="4dp"
            android:layout_weight="1"
            android:onClick="onRequestClicked"
            android:text="Request" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="4dp"
            android:layout_weight="1"
            android:onClick="onAddClicked"
            android:text="Add" />
    </LinearLayout>

    <chau.streetparking.ui.curtain.CurtainView
        xmlns:curtainView="http://schemas.android.com/apk/res-auto"
        android:id="@+id/curtain_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:visibility="gone"
        curtainView:curtainGravity="bottom"
        curtainView:curtainStatus="closed"
        curtainView:fixedValue="56dp"
        curtainView:reboundMode="half"
        curtainView:scrollDuration="1300">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:orientation="vertical">

            <!-- Sent Request & Cancel Layout-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="horizontal">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1"
                    android:onClick="onSendRequestClicked"
                    android:text="SEND REQUSET" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1"
                    android:onClick="onCancelClicked"
                    android:text="CANCEL" />
            </LinearLayout>

            <!--  SeekBar layout -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="-10dp"
                    android:text="Radius:"
                    android:textColor="@android:color/black"/>

                <com.appyvet.rangebar.RangeBar
                    xmlns:custom="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/seek_bar"
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    custom:tickStart="0"
                    custom:tickInterval="100"
                    custom:tickEnd="1000"
                    custom:rangeBar="false"
                    android:layout_marginLeft="4dp"/>


            </LinearLayout>

        </LinearLayout>


    </chau.streetparking.ui.curtain.CurtainView>

